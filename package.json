{
  "name": "simple-cached-firestore",
  "description": "Firestore wrapper with simplified API and optional caching built in",
  "version": "3.2.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/ehacke/simple-cached-firestore/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@ehacke/redis": "^1.1.4",
    "@types/bluebird": "^3.5.30",
    "@types/flat": "^5.0.0",
    "@types/ioredis": "^4.16.0",
    "@types/lodash": "^4.14.150",
    "@types/luxon": "^1.22.0",
    "@types/node": "^13.13.5",
    "@types/redlock": "^4.0.1",
    "@types/traverse": "^0.6.32",
    "bluebird": "^3.7.2",
    "bunyan": "1.8.12",
    "bunyan-prettystream": "0.1.3",
    "class-transformer": "^0.2.3",
    "clean-deep": "^3.3.0",
    "err": "^2.1.11",
    "fast-json-stable-stringify": "^2.1.0",
    "flat": "^5.0.0",
    "http-status": "^1.4.2",
    "lodash": "^4.17.15",
    "luxon": "^1.24.1",
    "traverse": "^0.6.6",
    "ts-essentials": "^6.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@ehacke/commitlint-config": "^1.0.2",
    "@ehacke/eslint-config": "^1.0.0",
    "@ehacke/prettier-config": "^1.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai-as-promised": "^7.1.2",
    "@types/expect": "^24.3.0",
    "@types/getenv": "^1.0.0",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4.2.0",
    "commitizen": "^4.1.2",
    "commitlint": "^8.3.5",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "firebase-admin": "^8.11.0",
    "fixpack": "^3.0.6",
    "getenv": "^1.0.0",
    "husky": "^4.2.5",
    "ioredis": "^4.16.3",
    "jsdoc": "^3.6.4",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.1",
    "typedoc": "^0.17.6",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist/**/*.{js,ts,tsbuildinfo}",
    "docs/**/*.*"
  ],
  "homepage": "https://github.com/ehacke/simple-cached-firestore#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "cached",
    "firebase",
    "firestore",
    "google"
  ],
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack"
    ],
    "*.{js,ts}": [
      "prettier-eslint --write",
      "eslint --fix"
    ]
  },
  "main": "dist/index.js",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "firestore.ts"
    ],
    "exclude": [
      "src/scratch.*"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ]
  },
  "peerDependencies": {
    "firebase-admin": "^8.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehacke/simple-cached-firestore.git"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json && sed -i 's/\"files\":/\"_files\":/' dist/package.json",
    "commit": "git-cz",
    "docs": "typedoc --plugin typedoc-plugin-markdown --readme none --exclude \"tests/**/*.+(unit|it).+(ts|js)\"",
    "integration": "nyc mocha --recursive -r source-map-support/register -r ts-node/register -r tsconfig-paths/register --use_strict --exit \"tests/**/*.it.+(ts|js)\"",
    "lint": "fixpack && prettier-eslint --write && eslint --fix \"**/*.{js,ts}\"",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack",
    "prepublishOnly": "npm run build",
    "test": "nyc mocha --recursive -r source-map-support/register -r ts-node/register -r tsconfig-paths/register --use_strict --exit \"tests/**/*.+(unit|it).+(ts|js)\"",
    "unit": "nyc mocha --recursive -r source-map-support/register -r ts-node/register -r tsconfig-paths/register --use_strict --exit \"tests/**/*.unit.+(ts|js)\""
  },
  "types": "dist/index.d.ts"
}
