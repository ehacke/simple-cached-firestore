{
  "name": "simple-cached-firestore",
  "description": "Firestore wrapper with simplified API and optional caching built in",
  "version": "3.2.5",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/ehacke/simple-cached-firestore/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@ehacke/redis": "^1.1.5",
    "@types/bluebird": "^3.5.32",
    "@types/flat": "^5.0.1",
    "@types/ioredis": "^4.16.6",
    "@types/lodash": "^4.14.155",
    "@types/luxon": "^1.24.0",
    "@types/node": "^14.0.13",
    "@types/redlock": "^4.0.1",
    "@types/traverse": "^0.6.32",
    "bluebird": "^3.7.2",
    "bunyan": "1.8.12",
    "bunyan-prettystream": "0.1.3",
    "class-transformer": "^0.2.3",
    "clean-deep": "^3.3.0",
    "err": "^2.1.11",
    "fast-json-stable-stringify": "^2.1.0",
    "flat": "^5.0.0",
    "http-status": "^1.4.2",
    "lodash": "^4.17.15",
    "luxon": "^1.24.1",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@ehacke/commitlint-config": "^1.0.3",
    "@ehacke/eslint-config": "^1.1.6",
    "@ehacke/prettier-config": "^1.0.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/getenv": "^1.0.0",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "chai": "^4.2.0",
    "class-validator": "^0.12.2",
    "commitizen": "^4.1.2",
    "commitlint": "^9.0.1",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "7.2.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "firebase-admin": "^8.12.1",
    "fixpack": "^3.0.6",
    "getenv": "^1.0.0",
    "husky": "^4.2.5",
    "ioredis": "^4.17.1",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "sinon": "^9.0.2",
    "ts-essentials": "^7.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.5",
    "validated-base": "^1.0.1"
  },
  "files": [
    "dist/**/*.{js,ts,tsbuildinfo}",
    "docs/**/*.*"
  ],
  "homepage": "https://github.com/ehacke/simple-cached-firestore#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "cached",
    "firebase",
    "firestore",
    "google"
  ],
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack"
    ],
    "*.{js,ts}": [
      "prettier-eslint --write",
      "eslint --fix"
    ]
  },
  "main": "dist/src/index.js",
  "optionalDependencies": {
    "ts-essentials": "^7.0.0"
  },
  "peerDependencies": {
    "firebase-admin": "^8.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehacke/simple-cached-firestore.git"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json && sed -i 's/\"files\":/\"_files\":/' dist/package.json",
    "commit": "git-cz",
    "docker:down": "COMPOSE_PROJECT_NAME=local docker-compose down --remove-orphans",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docker:up": "COMPOSE_PROJECT_NAME=local docker-compose up -d",
    "integration": "nyc mocha --recursive -r source-map-support/register -r ts-node/register -r tsconfig-paths/register --use_strict --exit \"tests/**/*.it.+(ts|js)\"",
    "lint": "fixpack && prettier-eslint --write && eslint --fix \"**/*.{js,ts}\"",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack",
    "prepublishOnly": "npm run build",
    "test": "npm run docker:up && npm run test-all && npm run lint",
    "test-all": "nyc mocha --recursive -r source-map-support/register -r ts-node/register --use_strict --exit \"tests/**/*.+(unit|it).+(ts|js)\"",
    "unit": "nyc mocha --recursive -r source-map-support/register -r ts-node/register --use_strict --exit \"tests/**/*.unit.+(ts|js)\""
  },
  "types": "dist/src/index.d.ts"
}
