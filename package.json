  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/ehacke/simple-cached-firestore/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@gapizza/redis": "^1.0.0",
    "@types/bluebird": "^3.5.33",
